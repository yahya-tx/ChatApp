<%= form_with model: @conversation_window, url: conversation_windows_path, class: "p-6 bg-white shadow-md rounded-lg space-y-6" do |f| %>
  <h3 class="text-2xl font-bold text-gray-700 dark:text-gray-200">Create a New Conversation</h3>

  <!-- Conversation Name -->
  <div>
    <%= f.label :name, "Conversation Name", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= f.text_field :name, class: "block w-full px-4 py-2 text-sm border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-200", placeholder: "Enter conversation name" %>
  </div>

  <!-- Conversation Type -->
  <div>
    <%= f.label :chat_type, "Conversation Type", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <div class="flex items-center space-x-4 mt-2">
      <div class="flex items-center">
        <%= f.radio_button :chat_type, :personal, id: 'chat_type_personal', class: 'w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-800 dark:border-gray-700' %>
        <%= f.label :chat_type_personal, "Personal", class: 'ml-2 text-sm font-medium text-gray-700 dark:text-gray-300' %>
      </div>
      <div class="flex items-center">
        <%= f.radio_button :chat_type, :group_chat, id: 'chat_type_group_chat', class: 'w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-800 dark:border-gray-700' %>
        <%= f.label :chat_type_group_chat, "Group Chat", class: 'ml-2 text-sm font-medium text-gray-700 dark:text-gray-300' %>
      </div>
    </div>
  </div>

  <!-- Select Users -->
  <div>
    <%= f.label :user_ids, "Select Users", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <div class="space-y-2 mt-2">
      <%= f.collection_check_boxes :user_ids, User.where.not(id: current_user.id), :id, :name, class: 'form-check-input' do |b| %>
        <div class="flex items-center">
          <%= b.check_box class: "w-4 h-4 text-blue-600 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-800 dark:border-gray-700" %>
          <%= b.label(class: 'ml-2 text-sm font-medium text-gray-700 dark:text-gray-300') %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Submit Button -->
  <div>
    <%= f.submit "Create Conversation", class: "w-full py-2 px-4 bg-blue-600 text-white text-sm font-medium rounded-lg shadow hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none dark:bg-blue-500 dark:hover:bg-blue-600 dark:focus:ring-blue-400" %>
  </div>
<% end %>
